<odoo>
  <data>

    <record id="view_riders_jobcard_form" model="ir.ui.view">
        <field name="name">view.riders.jobcard.form</field>
        <field name="model">servicerequest.rider</field>
        <field name="arch" type="xml">
          <form name="DLC Issues Form">
              <header>

                  <button name="technician_complete" string="Technician check complete" class="oe_highlight" state="check-in" type="object"/>


                  <field name="state" widget="statusbar" statusbar_visible="check-in,Technician service completed,Unit Manager parts approved,store officer parts released,Unit manager quality check,Checked out"/>
              </header>
    <sheet>
              <div class="oe_title">
                  <label for="vehicle_id" class="oe_edit_only"/>
                  <h1>
                      <field name="vehicle_id" />
                  </h1>
              </div>
              <group>
                  <group>
                      <field name="checkin_date"/>
                      <field name="checkout_date"/>
                    <field name="service_type"/>
                    <field name="checkin_comment"/>
                  </group>
                <group>
                  <field name="spare_tyre"/>
                  <field name="jack"/>
                  <field name="wheel_spanner"/>
                  <field name="tools"/>
                  <field name="caution_triangle"/>
                  <field name="fire_extinguisher"/>

                </group>
                  <group>
                      <field name="electrics_ta"/>
                      <field name="suspension_ta"/>
                      <field name="engine_ta"/>
                    <field name="bodywork_ta"/>
                    <field name="interior_ta"/>
                    <field name="tyres_ta"/>
                    <field name="technical_comment"/>
                  </group>
              </group>
            </sheet>
              <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>

        </field>
      </record>
      <record id="view_fundrequest_workshop_form" model="ir.ui.view">
        <field name="name">fundrequest.form</field>
        <field name="model">fundrequestw.rider</field>
        <field name="arch" type="xml">
            <form string="Fund Request">
                <header>
                    <button name="workshop_fund_request" type="object" string="Request Fund" class="oe_highlight" attrs="{'invisible':['|',('state', 'not in', ('draft'))]}"/>
                    <button name="workshop_fund_approve" type="object" string="Approve Request" class="oe_highlight" attrs="{'invisible':['|',('state', 'not in', ('Requested'))]}"/>
                    <button name="workshop_fund_reject" type="object" string="Reject Request" class="oe_highlight" attrs="{'invisible':['|',('state', 'not in', ('Requested'))]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,Requested,Approved,Rejected"/>
                </header>
                <sheet>
                <group>
                <field name="date"/>
                <field name="request_no"/>
                <field name="programme_id"/>
                <field name="jobcard_id"/>
                </group>


                    <notebook>
                    <page string="Parts">
                        <field name="operations" >
                        </field>



                    </page>
                    </notebook>
                    <group>
                    <field name="amount_total"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
      </record>
      <record id="view_fundrequest_partsline_tree" model="ir.ui.view">
            <field name="name">fundrequest.partsline.tree</field>
            <field name="model">fundrequest.partsline</field>
            <field name="arch" type="xml">
                <tree string="Parts Line" create="true" delete="true" editable="bottom">

                    <field name="parts_id" />
                    <field name="quantity"/>
                    <field name="cost" />
                    <field name="price_subtotal"/>


                </tree>
            </field>
        </record>
      <record id="view_fundrequest_tree" model="ir.ui.view">
            <field name="name">fundrequest.tree</field>
            <field name="model">fundrequestw.rider</field>
            <field name="arch" type="xml">
                <tree string="Fund Request">

                    <field name="date" />
                    <field name="request_no"/>
                    <field name="jobcard_id" />
                    <field name="amount_total"/>


                </tree>
            </field>
        </record>

